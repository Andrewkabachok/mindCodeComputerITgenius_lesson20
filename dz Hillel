from aiogram import Bot, Dispatcher, executor, types
from decouple import config

from utils import *

bot = Bot(config('APITOKEN'))
dp = Dispatcher(bot)

@dp.message_handler(commands=['start'])
async def send_first(message: types.Message):
    await message.answer('Привіт,я бот повторюха')
    
@dp.message_handler(commands=['help'])
async def command_pomokhite(message: types.Message):
    await message.answer('Напиши мені слово і я повторю його')
@dp.message_handler()
async def echo(message: types.Message):
    await message.answer(message.text)

if __name__ == '__main__':
    executor.start_polling(dp, skip_updates=True)
    
